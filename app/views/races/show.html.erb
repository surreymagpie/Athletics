<%= provide(:title, "#{@race.classification}") %>
<h1><%= @race.classification %> Results</h1>
<p>Fixture held on <%= @race.fixture.date.strftime("%d %B %Y") %> at <%= @race.fixture.location %></p>
<table>
  <thead>
    <tr>
      <th class="center">Position</th>
      <th class="center">Time</th>
      <th>Athlete</th>
      <th>Club</th>
      <th class="center">Div</th>
      <th class="center">Category</th>
      <th class="center">Points</th>
    </tr>
  </thead>
  <tbody>
  <% @race.results.finish_order.each do |res| %>
    <tr>
      <td class="center"><%= res.position %></td>
      <td class="center"><%= res.formatted_time %></td>
      <td><%= link_to res.athlete_name, athlete_path(res.athlete) %></td>
      <td><%= res.club.name %></td>
      <td class="center"><%= res.division || nil %></td>
      <td class="center"><%= res.athlete.category(@race.fixture.date) %></td>
      <td class="center"><%= res.points %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div> <!-- row -->
<div class="row">
  <%= table_race_scores(@race) %>
</div>
<div class="row">
  <%= link_to 'Calculate Scores', score_race_path, class: "button large radius" %>
</div>